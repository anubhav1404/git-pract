name: CD - Spring Boot Backend

on:
  workflow_run:
    workflows: ["CI - Spring Boot Backend"]   # must match your CI workflow name
    types:
      - completed

jobs:
  deploy:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: self-hosted   # must have kubectl + kubeconfig configured

    steps:
      # Checkout backend repo at the exact commit built in CI
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          repository: ${{ github.event.workflow_run.head_repository.full_name }}
          ref: ${{ github.event.workflow_run.head_sha }}

      # Apply Kubernetes manifests
      - name: Apply Kubernetes manifests
        run: |
          kubectl apply -f kubernetes/

      # Wait for Postgres StatefulSet before backend rollout
      - name: Wait for Postgres StatefulSet
        run: |
          echo "⏳ Waiting for Postgres StatefulSet to be ready..."
          kubectl rollout status statefulset/postgres-statefulset --timeout=180s

      # Verify rollout of backend deployment
      - name: Verify Backend rollout
        run: |
          echo "⏳ Waiting for Backend Deployment to be ready..."
          kubectl rollout status deployment/backend-deployment --timeout=180s
